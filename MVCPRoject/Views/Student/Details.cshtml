@model Student
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div class="card" style="width:400px">
    <img class="card-img-top" src="/Images/@Model.ImageURl" alt="Card image">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <p class="card-text">@Model.Address</p>
        <a href="/student/all" class="btn btn-primary">back To List</a>
    </div>
</div>

